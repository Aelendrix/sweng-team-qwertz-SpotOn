<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_picture_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.spotOn.gui.ViewFullsizeImageActivity">

    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/fullSizeImageActivityLayout">-->

        <ImageView
            android:contentDescription="@string/fullSizeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/cardview_shadow_start_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/fullSizeImageView"
            android:scaleType="fitXY"
            android:adjustViewBounds="false" />


    <Button
        android:text="@string/upvoteButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:onClick="recordUpvote"
        android:id="@+id/upvoteButton"
        android:layout_alignBaseline="@+id/downVoteButton"
        android:layout_alignBottom="@+id/downVoteButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/downvoteButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="16dp"
        android:onClick="recordDownvote"
        android:id="@+id/downVoteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- </RelativeLayout>-->
</RelativeLayout>

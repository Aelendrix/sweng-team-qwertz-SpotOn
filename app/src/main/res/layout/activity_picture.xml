<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.project.PictureActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:text="@string/captureButton"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:id="@+id/captureButton"
        android:layout_gravity="center_horizontal"
        android:onClick="dispatchTakePictureIntent"/>

    <Button
        android:text="@string/rotate"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="rotatePicture"
        android:id="@+id/rotateButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:contentDescription="@string/pictureTaken"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:id="@+id/image_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="seconds to keep the photo?"
        android:id="@+id/askHowMuchTime" />

    <Button
        android:text="@string/savePicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/savePicButton"
        android:layout_gravity="center_horizontal"
        android:onClick="savePicture"/>

    <Button
        android:text="@string/seePictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seePictures"
        android:onClick="goToSeePicturesActivity"/>


</LinearLayout>

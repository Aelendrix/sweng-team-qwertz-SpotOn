<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.project.PictureActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <Button
        android:text="@string/captureButton"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:id="@+id/captureButton"
        android:layout_gravity="center_horizontal"
        android:onClick="dispatchTakePictureIntent"/>

    <ImageView
        android:contentDescription="@string/pictureTaken"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:id="@+id/image_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="seconds to keep the photo?"
        android:id="@+id/askHowMuchTime" />

    <Button
        android:text="@string/savePicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/savePicButton"
        android:layout_gravity="center_horizontal"
        android:onClick="savePicture"/>

    <Button
        android:text="@string/seePictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seePictures"
        android:onClick="goToSeePicturesActivity"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".gui.UserProfileActivity">

    <TextView
        android:text="@string/userProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileTitleTextView"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="@string/userProfileFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/profileFirstNameTextView"
        android:textStyle="normal|bold"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_below="@+id/profileTitleTextView" />

    <TextView
        android:text="@string/userProfileLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileLastNameTextView"
        android:textStyle="normal|bold"
        android:layout_below="@+id/profileFirstNameTextView"
        android:layout_alignLeft="@+id/profileFirstNameTextView"
        android:layout_alignStart="@+id/profileFirstNameTextView"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="@string/userProfileKarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileLastNameTextView"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/profileFirstNameTextView"
        android:layout_alignStart="@+id/profileFirstNameTextView"
        android:textStyle="normal|bold"
        android:id="@+id/profileKarmaTextView" />

    <Button
        android:text="@string/userProfileBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileTitleTextView"
        android:layout_marginTop="20dp"
        android:id="@+id/profileBackButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileKarmaTextView"
        android:layout_marginTop="20dp"
        android:id="@+id/profilePicturesListView" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:id="@+id/empty_grid_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical"
    android:weightSum="8">

    <ImageView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:src="@drawable/img1"
        android:adjustViewBounds="false"
        tools:ignore="ContentDescription"
        android:layout_weight="5"
        android:baselineAlignBottom="false" />

    <TextView
        android:text="@string/noPictureViewable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/empty_grid_textview" />

    <Button
        android:text="@string/goToMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/empty_grid_button"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="onEmptyGridButtonClick" />

</LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid_layout"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Upvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/order_upvote_button" />

            <Button
                android:text="Oldest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/order_upvote_button"
                android:id="@+id/order_oldest_button" />

            <Button
                android:text="Newest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/order_oldest_button"
                android:id="@+id/order_newest_button" />
            <Button
                android:text="Hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/order_newest_button"
                android:id="@+id/order_hottest_button" />
        </RelativeLayout>

        <GridView
            android:id="@+id/gridview"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:verticalSpacing="0dp"
            android:horizontalSpacing="0dp"
            android:stretchMode="columnWidth"/>

    </FrameLayout>

</FrameLayout>